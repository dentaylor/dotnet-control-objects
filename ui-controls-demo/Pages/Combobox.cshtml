@page
@model ComboboxModel

<h2>Combobox Example</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="SelectedOption">Choose an option:</label>
        <select asp-for="SelectedOption" asp-items="Model.Options" class="form-control"></select>
    </div>
</form>

@if (Model.HasSubmitted)
{
    <div class="alert alert-info mt-3">
        You selected: <strong>@Model.SelectedOption</strong>
    </div>
}